datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    userId            Int                @id @default(autoincrement())
    firstName         String
    lastName          String
    userName          String             @unique
    email             String             @unique
    password          String
    category          Category           @relation(fields: [categoryId], references: [categoryId])
    categoryId        Int
    xpLevel           XpLevel            @relation(fields: [xpLevelId], references: [xpLevelId])
    xpLevelId         Int
    createdAt         DateTime           @default(now())
    lastSignIn        DateTime?
    lastCheckIn       DateTime?
    emailVerified     Boolean            @default(false)
    tasks             Task[]
    emailVerification EmailVerification?
}

model Task {
    taskId          Int       @id @default(autoincrement())
    taskName        String
    taskDescription String
    user            User      @relation(fields: [userId], references: [userId])
    userId          Int
    completed       Boolean   @default(false)
    createdAt       DateTime  @default(now())
    completedAt     DateTime?
}

model GeneratedTask {
    generatedtaskId          Int        @id @default(autoincrement())
    generatedTaskName        String
    generatedTaskDescription String
    categories               Category[]
    xpLevel                  XpLevel    @relation(fields: [xpLevelId], references: [xpLevelId])
    xpLevelId                Int
}

model Category {
    categoryId     Int             @id @default(autoincrement())
    categoryName   String          @unique
    generatedTasks GeneratedTask[]
    users          User[]
}

model XpLevel {
    xpLevelId      Int             @id @default(autoincrement())
    xpLevelName    String          @unique
    generatedTasks GeneratedTask[]
    users          User[]
}

model EmailVerification {
    user      User     @relation(fields: [userId], references: [userId])
    userId    Int
    code      String
    expiresAt DateTime

    @@id(userId)
}
